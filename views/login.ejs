<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Login</title>
  <link rel="icon" href="https://cdn-icons-png.freepik.com/256/9416/9416123.png?semt=ais_hybrid"> 


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link href="modals.css" rel="stylesheet"> 
</head>

<body>


  <ul>
    <% if (typeof errors !='undefined' ) { %>
      <% errors.forEach(error=> { %>
        <div class="alert alert-danger">
          <li>
            <%= error.message %>
          </li>
          <% }) %>
            <% } %>
        </div>
  </ul>

  <ul>

    <% if(messages.success_msg) { %>
      <div class="alert alert-success">
        <strong>Success!</strong>
        <li>
          <%= messages.success_msg %>
        </li>
        <% } %>
      </div>
  </ul>

  <ul>
    <% if (messages.error) { %>
      <div class="alert alert-danger">
        <li>
          <%= messages.error %>
        </li>
        <% } %>
      </div>
  </ul>

  <form action="/users/login" method="POST">

    <div class="modal modal-sheet d-block bg-body-secondary" tabindex="-1" role="dialog" id="modalSignin">
      <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
          <div class="modal-header p-5 pb-4 border-bottom-0">
            <h1 class="fw-bold mb-0 fs-2 ">Sign in</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body p-5 pt-0">
            <form class="">
              <!-- กรอก Email -->
              <div class="form-floating mb-3">
                <input type="email" class="form-control rounded-3" id="email" name="email" placeholder="Email"
                  required />
                <label for="floatingPassword">Email</label>
              </div>
              <!-- กรอก Password -->
              <div class="form-floating mb-3">
                <input type="password" class="form-control rounded-3" id="password" name="password"
                  placeholder="Password" required />
                <label for="floatingPassword">Password</label>
                
              </div>
              <!-- ปุ่ม sign in -->
              <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Sign in</button>
              <!-- ยังไม่มีบัญชี -->
              <small class="text-gray-500"><a href="/users/register">Don't have an account? Sign up
                  here</a></small>
          
              <hr class="my-4">
              <h2 class="fs-5 fw-bold mb-3">Or continue with</h2>
              <a class="w-100 py-2 mb-2 btn btn-outline-dark rounded-3" href="/auth/google">
                <svg class="bi me-1" width="16" height="16">
                  <use xlink:href="#google"></use>
                  <img
                    src="https://cdn4.iconfinder.com/data/icons/logos-brands-7/512/google_logo-google_icongoogle-512.png"
                    loading="lazy" alt="Gmail " title="Gmail " width="20" height="20">
                </svg>
                Google
              </a>
            </form>
          </div>
        </div>
      </div>
    </div>


  </form>


</body>

</html>