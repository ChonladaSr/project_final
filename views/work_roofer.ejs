                    </div>
                </div>
            </div>

            <div class="bg-gray-200 dark:bg-neutral-700 rounded-md w-full h-20 animate-pulse"></div>
        </div>



        <% data.forEach(item=> { %>
            <tr>
                <td>
                    <%= item.name %>
                </td>
                <td>
                    <%= item.job_type %>
                </td>
                <td>
                    <%= item.status %>
