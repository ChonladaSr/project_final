        </form>
       
  

        <script>
            document.getElementById('registerForm').addEventListener('submit', async function (event) {
                event.preventDefault(); // ป้องกันการส่งฟอร์มแบบปกติ
            
                const formData = new FormData(this);
            
                // ตรวจสอบว่ามีไฟล์ที่ต้องการหรือไม่
                if (!formData.get('profile_image') || !formData.get('photo1') || !formData.get('photo2') || !formData.get('photo3')) {
                    alert('กรุณาอัปโหลดรูปภาพให้ครบทุกไฟล์');
                    return;
                }
            
                try {
                    const response = await fetch('/teams/register', {
                        method: 'POST',
                        body: formData,
                    });
            
                    if (response.ok) {
                        alert('ลงทะเบียนสำเร็จ!'); // แสดง alert เมื่อสำเร็จ
                        window.location.href = '/team/login'; // เปลี่ยนเส้นทางไปที่หน้า login
                    } else {
                        const errorMessage = await response.text(); // รับข้อความจากเซิร์ฟเวอร์
                        document.getElementById('message').textContent = errorMessage || 'เกิดข้อผิดพลาดในการสมัครสมาชิก';
                        document.getElementById('message').style.color = 'red';
                    }
                } catch (error) {
                    console.error('Error:', error);
                    document.getElementById('message').textContent = 'เกิดข้อผิดพลาดในการสมัครสมาชิก';
                }
            });
            </script>
            


