<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>team_register</title>
  <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/6342/6342703.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <%- include('./font') %>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-cream text-charcoal leading-normal overflow-x-hidden lg:overflow-auto">
  <main class="flex-1 flex flex-col">
    <div id="message" class="text-center"></div>

    <section class="bg-cream-lighter p-4 shadow">
      <div class="md:flex">
        <h2 class="md:w-1/3 uppercase tracking-wide text-xl mb-6 prompt-bold ">ลงทะเบียน</h2>
      </div>
      <form id="registerForm" enctype="multipart/form-data">
        <div class="md:flex mb-8">
          <div class="md:w-1/3">
            <legend class="uppercase tracking-wide text-sm prompt-medium">ข้อมูลส่วนตัว</legend>
          </div>
          <div class="md:flex-1 mt-2 mb:mt-0 md:px-3">
            <div class="mb-4">
              <label class="block uppercase tracking-wide text-xs prompt-bold">ชื่อ-สกุล</label>
              <input class="w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm" type="text"
                name="name" id="name" placeholder="ชื่อจริง-นามสกุล" required>
            </div>
            <div class="md:flex mb-4">
              <div class="md:flex-1 md:pr-3">
                <label
                  class="block uppercase tracking-wide text-charcoal-darker text-xs prompt-bold">เบอร์โทรศัพท์</label>
                <input class="w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm" type="phone"
                  name="phone" id="phone" placeholder="0XXXXXXXXX" required>
              </div>
              <div class="md:flex-1 md:pl-3">
                <label class="block uppercase tracking-wide text-charcoal-darker text-xs prompt-bold">อีเมล</label>
                <input class="w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm" type="email"
                  name="email" id="email" placeholder="you@example.com" required>
              </div>
            </div>
            <div class="md:flex mb-4">
              <div class="md:flex-1 md:pr-3">
                <label class="block uppercase tracking-wide text-charcoal-darker text-xs prompt-bold">รหัสผ่าน</label>
                <input class="w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm" type="password"
                  id="password" name="password" placeholder="******" required>
              </div>
              <div class="md:flex-1 md:pl-3">
                <label
                  class="block uppercase tracking-wide text-charcoal-darker text-xs prompt-bold">ยืนยันรหัสผ่าน</label>
                <input class="w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm" type="password"
                  id="password2" name="password2" placeholder="******" required>
              </div>
            </div>
          </div>
        </div>
        <div class="md:flex mb-8">
          <div class="md:w-1/3">
            <legend class="tracking-wide text-sm prompt-medium">รายละเอียดการสมัครงาน</legend>
          </div>
          <div class="md:flex-1 mt-2 mb:mt-0 md:px-3">
            <div class="mb-4">
              <label for="job_type" class="text-xs prompt-bold mb-2">ประเภทของงาน </label>
              <label for="job_type" class="prompt-regular form-check-label text-sm">
                <input type="radio" class="form-check-input mb-1 prompt-regular bg-gray-300" name="job_type"
                  value="ช่างฝ้า">
                ช่างฝ้า
              </label>
              <label for="job_type" class="prompt-regular form-check-label text-sm">
                <input type="radio" class="form-check-input mb-1 prompt-regular bg-gray-300" name="job_type"
                  value="ช่างทาสี"> ช่างทาสี
              </label>
              <label for="job_type" class="prompt-regular form-check-label text-sm">
                <input type="radio" class="form-check-input mb-1 prompt-regular bg-gray-300" name="job_type"
                  value="พนักงานทำความสะอาด"> พนักงานทำความสะอาด
              </label>
            </div>
            <div class="mb-4">
              <label for="job_scope" class="block text-xs prompt-bold mb-1">พื้นที่ให้บริการ:</label>
              <input list="job_scopes" name="job_scope"
                class=" form-select mt-3 w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm"
                placeholder="เลือกพื้นที่ให้บริการ" required />
              <datalist id="job_scopes" class="w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm">
                <option class="prompt-regular" value="กรุงเทพมหานครฯ">
                <option class="prompt-regular" value="นครปฐม">
                <option class="prompt-regular" value="ระยอง">
              </datalist>
            </div>
            <div class="mb-4">
              <label class="block uppercase tracking-wide text-charcoal-darker text-xs prompt-bold">ช่วงราคา/บาท</label>
              <input class="w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm" type="number"
                id="range" name="range" placeholder="ช่วงราคา" required>
            </div>
            <div class="mb-4">
              <label
                class="block uppercase tracking-wide text-charcoal-darker text-xs prompt-bold">ประสบการณ์การทำงาน/ปี</label>
              <input class="w-full shadow-inner p-2 border-0 mt-1 bg-gray-100 prompt-light text-sm" type="number"
                id="experience" name="experience" placeholder="ประสบการณ์การทำงาน" required>
            </div>
          </div>
        </div>
        <div class="md:flex">
          <div class="md:w-1/3">
            <legend class="uppercase tracking-wide text-sm prompt-medium">อัปโหลดไฟล์รูปภาพ</legend>
          </div>
          <div class="md:flex-1 mt-2 mb:mt-0 md:px-3 prompt-light">
            <div class="md:flex mb-4">
              <div class="md:flex-1 md:pr-3">

                <div class="grid w-full max-w-xs items-center gap-1.5">
                  <label
                    class="text-xs prompt-bold leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">อัปโหลดรูปโปรไฟล์</label>
                  <input id="profile_image" name="profile_image" type="file" accept="image/*" 
                    class="flex h-10 w-full rounded-md border border-input bg-white px-3 py-2 text-sm text-gray-400 file:border-0 file:bg-transparent file:text-gray-600 file:text-sm file:font-medium" required>
                </div>

              </div>
              <div class="md:flex-1 md:pl-3 mt-2 md:mt-0">
                <div class="grid w-full max-w-xs items-center gap-1.5">
                  <label
                    class="text-xs prompt-bold leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">อัปโหลดรูปผลงานที่เคยทำ 1</label>
                  <input type="file" id="photo1" name="photo1" accept="image/*" 
                    class="flex h-10 w-full rounded-md border border-input bg-white px-3 py-2 text-sm text-gray-400 file:border-0 file:bg-transparent file:text-gray-600 file:text-sm file:font-medium" required>
                </div>
              </div>
            </div>
            <div class="md:flex mb-4">
              <div class="md:flex-1 md:pr-3">
                <div class="grid w-full max-w-xs items-center gap-1.5">
                  <label
                    class="text-xs prompt-bold leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">อัปโหลดรูปผลงานที่เคยทำ 2</label>
                  <input type="file" id="photo2" name="photo2" accept="image/*" 
                    class="flex h-10 w-full rounded-md border border-input bg-white px-3 py-2 text-sm text-gray-400 file:border-0 file:bg-transparent file:text-gray-600 file:text-sm file:font-medium" required>
                </div>
              </div>
              <div class="md:flex-1 md:pl-3 mt-2 md:mt-0">
                <div class="grid w-full max-w-xs items-center gap-1.5">
                  <label
                    class="text-xs prompt-bold leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">อัปโหลดรูปผลงานที่เคยทำ 3</label>
                  <input type="file" id="photo3" name="photo3" accept="image/*" 
                    class="flex h-10 w-full rounded-md border border-input bg-white px-3 py-2 text-sm text-gray-400 file:border-0 file:bg-transparent file:text-gray-600 file:text-sm file:font-medium" required>
                </div>
              </div>
            </div>
          </div>
        </div>
        
    
         <!-- ปุ่มบันทึก -->
         <div class="flex justify-end space-x-4 py-5">
          <a href="/team" type="button"
              class="text-muted-foreground hover:text-muted-foreground/80 py-2 rounded-md prompt-medium">ยกเลิก</a>
          <button type="submit"
              class="bg-gray-700 text-white hover:bg-gray-800 hover:text-white px-4 py-2 rounded-md prompt-medium">บันทึก</button>
          </div>
      
      
      </form>
    </section>
  </main>
</body>

<script>
  document.getElementById('registerForm').addEventListener('submit', async function (event) {
    event.preventDefault(); // ป้องกันการส่งฟอร์มแบบปกติ

    const formData = new FormData(this);

    // ตรวจสอบว่ามีไฟล์ที่ต้องการหรือไม่
    if (!formData.get('profile_image') || !formData.get('photo1') || !formData.get('photo2') || !formData.get('photo3')) {
      alert('กรุณาอัปโหลดรูปภาพให้ครบทุกไฟล์');
      return;
    }

    // ตรวจสอบว่ารหัสผ่านตรงกัน
    if (formData.get('password') !== formData.get('password2')) {
      alert('รหัสผ่านไม่ตรงกัน');
      return;
    }

    try {
      const response = await fetch('/teams/register', {
        method: 'POST',
        body: formData,
      });

      const result = await response.json();

      if (response.ok) {
        alert('ลงทะเบียนสำเร็จ!'); // แสดง alert เมื่อสำเร็จ
        window.location.href = '/team/login'; // เปลี่ยนเส้นทางไปที่หน้า login
      } else {
        document.getElementById('message').textContent = result.error || 'เกิดข้อผิดพลาดในการลงทะเบียน';
        document.getElementById('message').style.color = 'red';
      }
    } catch (error) {
      console.error('Error:', error);
      document.getElementById('message').textContent = 'เกิดข้อผิดพลาดในการสมัครสมาชิก';
      document.getElementById('message').style.color = 'red';
    }
  });
</script>



</html>