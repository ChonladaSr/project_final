<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Approval</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Task Approval</h1>
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>ID</th>
          <th>Description</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.description %></td>
            <td><%= task.status %></td>
            <td>
              <button class="btn btn-success approve-btn" data-id="<%= task.id %>">Approve</button>
              <button class="btn btn-danger reject-btn" data-id="<%= task.id %>">Reject</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.approve-btn').forEach(button => {
        button.addEventListener('click', async (event) => {
          const id = event.target.getAttribute('data-id');
          try {
            const response = await fetch(`/tasks/${id}/approve`, {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json'
              }
            });
            if (response.ok) {
              location.reload();
            }
          } catch (error) {
            console.error('Error approving task:', error);
          }
        });
      });

      document.querySelectorAll('.reject-btn').forEach(button => {
        button.addEventListener('click', async (event) => {
          const id = event.target.getAttribute('data-id');
          try {
            const response = await fetch(`/tasks/${id}/reject`, {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json'
              }
            });
            if (response.ok) {
              location.reload();
            }
          } catch (error) {
            console.error('Error rejecting task:', error);
          }
        });
      });
    });
  </script>
</body>
</html>
